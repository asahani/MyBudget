			<%=render 'budgets/dashboard/budget_dashboard_progress'%>
		</div>
		<div class="col-md-3">
			<%=render 'budgets/dashboard/budget_calendar_widget'%>
		</div>
</div>

<div class="row">
		<div class="col-md-3">

				<!-- LIST GROUP WITH BADGES -->
				<div class="panel panel-default">
						<div class="panel-heading">
								<h3 class="panel-title">With Badges</h3>
						</div>
						<div class="panel-body">
								<ul class="list-group border-bottom">
										<li class="list-group-item">Lorem ipsum dolor sit amet<span class="badge">14</span></li>
