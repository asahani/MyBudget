<!-- Modal -->
<div class="modal-dialog" style="width: 1024px;">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
			<h4 class="modal-title" id="newPayeeModalLabel">New Payee</h4>
		</div>
		<%= form_for @payee, remote: true do |f| %>
		<%= f.hidden_field :is_account, :value => false%>
		<%= f.hidden_field :called_from_import_txn, :value => @payee.called_from_import_txn%>
		<div class="modal-body">
			<table class="table">
				<th>
					<td>Name</td>
					<td>Description</td>
					<td>Category</td>
				</th>	
				<tr>
					<td><%= f.text_field :name %></td>
					<td><%= f.text_field :description %></td>
					<td><%= f.collection_select :category_id, Category.where('active = ?',true), :id, :name, prompt: true %></td>
				</tr>
			</table>
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			<%= f.submit class: "btn btn-primary"%>
		</div>
		<%end%>
	</div>
</div>