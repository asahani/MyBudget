<div class="x-widget-timeline">
  <div class="x-widget-timelime-head" style="margin-bottom: 10px!important;">
    <h3>Budget <%=@budget.name%></h3>
  </div>
  <div class="row">
    <div class="col-md-6" style="padding: 0px 0px 0px 5px;">
        <a href="#" class="tile tile-primary" style="margin-bottom:5px!important;font-size: 18px;">
          <%unless @budget.nil?%>
            <strong><%=number_to_currency(@budget.expenses)%></strong>
            <p style="padding-top:10px;">Expenses</p>
          <%else%>>
              <p style="padding-top:10px;">No current budget</p>
          <%end%>
          <div class="informer informer-danger dir-tr"><span class="fa fa-caret-down"></span></div>
        </a>
    </div>
    <div class="col-md-6" style="padding: 0px 5px 0px 5px;">
      <a href="#" class="tile tile-primary" style="margin-bottom:5px!important;font-size: 18px;">
        <%unless @budget.nil?%>
          <strong><%=number_to_currency(@budget.savings)%></strong>
          <p style="padding-top:10px;">Savings</p>
        <%else%>>
            <p style="padding-top:10px;">No current budget</p>
        <%end%>
        <div class="informer informer-danger dir-tr"><span class="fa fa-caret-down"></span></div>
      </a>
    </div>
    <div class="col-md-6" style="padding: 0px 0px 0px 5px;">
      <a href="#" class="tile tile-primary" style="margin-bottom:5px!important;font-size: 18px;">
        <%unless @budget.nil?%>
          <strong><%=number_to_currency(@budget.income_remaining)%></strong>
          <p style="padding-top:10px;">Income Left</p>
        <%else%>>
            <p style="padding-top:10px;">No current budget</p>
        <%end%>
        <div class="informer informer-danger dir-tr"><span class="fa fa-caret-down"></span></div>
      </a>
    </div>
    <div class="col-md-6" style="padding: 0px 5px 0px 5px;">
      <a href="#" class="tile tile-primary" style="margin-bottom:5px!important;font-size: 18px;">
        <%unless @budget.nil?%>
          <strong><%=number_to_currency(@budget.expenses_remaining)%></strong>
          <p style="padding-top:10px;">Expenses Left</p>
        <%else%>>
            <p style="padding-top:10px;">No current budget</p>
        <%end%>
        <div class="informer informer-danger dir-tr"><span class="fa fa-caret-down"></span></div>
      </a>
    </div>
  </div>
  <div class="progress" style="margin: 5px 5px 0px 5px;">
      <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">60%</div>
  </div>
</div>
