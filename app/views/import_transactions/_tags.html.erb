<!-- Modal -->
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
			<h4 class="modal-title" id="tagsImportedTxnModalLabel">Tags for Transaction</h4>
		</div>

		<div class="modal-body">
			<%=form_tag add_tags_imported_transaction_path(txn_id: @imported_transaction.id),{:remote => true} do%>
			<div class="panel panel-default">
				<div class="panel-body">
						<h3><span class="fa fa-tags"></span> Add Tags</h3>
						<p>Add tags to transaction.</p>
				</div>

				<div class="panel-body form-group-separated">
						<div class="form-group">
								<label class="col-md-3 col-xs-5 control-label">Tags</label>
								<div class="col-md-9 col-xs-7">
										<%= text_field_tag :tags, @imported_transaction.tags, :data => {:role => 'tagsinput' }, class: "form-control" %>
								</div>
						</div>

						<div class="form-group">
								<div class="col-md-12 col-xs-5">
									<%= button_tag(type: 'submit',onclick: "$('#tagsImportedTxnModal').modal('hide');", class: "btn btn-primary btn-rounded pull-right") do %>
									 <i class='fa fa-tags'></i>&nbsp;Add Tags
									<% end %>
								</div>
						</div>
					</div>
				<%end%>
			</div>
		</div>

		<div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		</div>
	</div>
</div>
<script>

  $(function() {
  	$("input[data-role=tagsinput], select[multiple][data-role=tagsinput]").tagsinput({
  		tagClass: 'label fa fa-tag'
  	});
  });
</script>
