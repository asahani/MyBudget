<!-- Modal -->
<div class="modal-dialog" style="width: 1024px;">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
			<h4 class="modal-title" id="importTransactionModalLabel">Import Transactions</h4>
		</div>
		<%= form_tag import_transactions_process_file_path, multipart: true do %>
		<div class="modal-body">
			<%= hidden_field_tag :budget_id, @budget.id%>
			Import for Account: <%= select_tag :account_id, options_from_collection_for_select(Account.all, :id, :name)%>
			Balance Due: <%= number_field_tag :import_balance_due, nil, :step => 0.01 %>
		  IMport File: <%= file_field_tag :file,class: "" %>
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			<%= submit_tag "Import", class: "btn btn-primary"%>
		</div>
		<%end%>
	</div>
</div>
<script>
$(function() {
    $( ".datepicker").datepicker({dateFormat: 'dd-mm-yy' });
  });

$(function() {
  $('#new-budgeted-transaction-button').click(function(event){
    $('#new-budgeted-transaction-row').slideDown(1000);
  });
});
</script>
