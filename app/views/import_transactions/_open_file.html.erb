<!-- Modal -->
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
			<h4 class="modal-title" id="importTransactionModalLabel">Import Transactions</h4>
		</div>
		<div class="modal-body">
			<%= form_tag import_transactions_process_file_path, multipart: true, class: "form-horizontal" do %>
			<div class="panel panel-default">
				<div class="panel-body">
						<h3><span class="fa fa-download"></span> Import Trasactions</h3>
						<p>Import transactions from bank statements in CSV format.</p>
				</div>

				<div class="panel-body form-group-separated">
					<%= hidden_field_tag :budget_id, @budget.id%>
					<div class="form-group">
							<label class="col-md-3 col-xs-5 control-label">Import for Budget</label>
							<div class="col-md-9 col-xs-7">
								<%= select_tag :transaction_budget_id, options_from_collection_for_select(Budget.all.open_budgets, :id, :name)%>
							</div>
					</div>
					<div class="form-group">
							<label class="col-md-3 col-xs-5 control-label">Import for Account</label>
							<div class="col-md-9 col-xs-7">
								<%= select_tag :account_id, options_from_collection_for_select(Account.credit_account.active.all, :id, :name)%>
							</div>
					</div>
					<div class="form-group">
							<label class="col-md-3 col-xs-5 control-label">Balance Due</label>
							<div class="col-md-9 col-xs-7">
								<%= number_field_tag :import_balance_due, nil, :step => 0.01 %>
							</div>
					</div>
					<div class="form-group">
							<label class="col-md-3 col-xs-5 control-label">File</label>
							<div class="col-md-9 col-xs-7">
								<%= file_field_tag :file,class: "btn btn-primary btn-file" %>
							</div>
					</div>

					<div class="form-group">
							<div class="col-md-12 col-xs-5">
								<%= button_tag(type: 'submit', class: "btn btn-primary pull-right") do %>
								 <i class='fa fa-download'></i>&nbsp;Import
								<% end %>
							</div>
					</div>
				</div>
			</div>
			<%end%>

		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		</div>
	</div>
</div>
