<tr id=<%=@budget_item.id.to_s + '_details'%> >
	<td class="inner-tabele-container" colspan=8 style="">
		<table id="inner-table">
		<thead>
			<th>Account</th>
			<th>Payee</th>
			<th>Date</th>
			<th>Debit</th>
			<th>Credit</th>
			<th colspan=2>Comments</th>
			<th style="border: none!important;">
				<ul class="panel-controls">
					<li><a href="#" id="<%=@budget_item.id.to_s + '_close'%>" class="panel-remove"><span class="fa fa-times"></span></a></li>
				</ul>
			</th>
		</thead>
		<%@budget_item.budget_transactions.each do |budget_transaction|%>
		<tr>
			<td><%=budget_transaction.account.name%></td>
			<td><%=budget_transaction.payee.name%></td>
			<td><%=budget_transaction.transaction_date%></td>
			<td><%=number_to_currency(budget_transaction.debit)%></td>
			<td><%=number_to_currency(budget_transaction.credit)%></td>
			<td colspan=3><%=budget_transaction.comments%></td>
		</tr>
		<%end%>
		</table>
	</td>
</tr>

<script>
$(function() {
  var btn_id = "#<%= escape_javascript@budget_item.id.to_s%>"+"_close";
  var tr_id = "#<%= escape_javascript@budget_item.id.to_s%>"+"_details";
  $(btn_id).click(function(event){
	$(tr_id).hide();
  });
});
</script>
