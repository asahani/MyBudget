<div class="row" id="import-preview-container">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
					<h3 class="panel-title">
						<%if !@account.nil?%>
							<%=@account.name%>&nbsp;Account Transactions
						<%elsif !@budget.nil?%>
							<%=Date::ABBR_MONTHNAMES[@budget.month].upcase%>&nbsp;<%=@budget.year%>&nbsp;Budget Transactions
						<%else%>
								All Transactions
						<%end%>
					</h3>
					<ul class="panel-controls">
							<li><a href="#" class="panel-fullscreen"><span class="fa fa-expand"></span></a></li>
					</ul>
			</div>

		  <% if flash[:error]%>
		    <div class="alert alert-danger alert-dismissible" role="alert">
				<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
		      <h2><strong>Warning!</strong> An error has been detected.</h2>
		      <ul>
		        <li><%= flash[:error]%></li>
		      </ul>
		    </div>
			<%end%>

			<%=render 'transactions_list'%>
		</div>
	</div>
</div>
