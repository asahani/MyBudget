<!-- TASKS -->
<li class="xn-icon-button pull-right">
    <a href="#"><span class="fa fa-tasks"></span></a>
    <div class="informer informer-warning"><%=Task.open.count%></div>
    <div class="panel panel-primary animated zoomIn xn-drop-left xn-panel-dragging">
        <div class="panel-heading">
            <h3 class="panel-title"><span class="fa fa-tasks"></span> Tasks</h3>
            <div class="pull-right">
                <span class="label label-warning"><%=Task.open.count%> active</span>
            </div>
        </div>
        <div class="panel-body list-group scroll" style="height: 200px;">
            <%Task.open.order(created_at: :desc).each do |task|%>
            <a class="list-group-item" href="/tasks">
                <strong><%=task.title%></strong>
                <div class="progress progress-small progress-striped active">
                    <%
                      progress = 100
                      barcolor = "success"
                      unless task.due_by.nil?
                        progress = progress - ((task.due_by.to_date - task.created_at.to_date).to_i * 10)
                      end

                      if progress > 74
                        barcolor = "danger"
                      elsif progress > 49
                        barcolor = "warning"
                      end
                    %>
                    <div class="progress-bar progress-bar-<%=barcolor%>" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: <%=progress%>%;">50%</div>
                </div>
                <small class="text-muted"><span class="fa fa-calendar"></span> <%=task.due_by.strftime("%d %b, %Y")%></small>
            </a>
            <%end%>
        </div>
        <div class="panel-footer text-center">
            <a href="/tasks">Show all tasks</a>
        </div>
    </div>
</li>
<!-- END TASKS -->
