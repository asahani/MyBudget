<h1>Listing incomes</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Amount</th>
      <th>Recurring</th>
      <th>Weekly</th>
      <th>Fortnightly</th>
      <th>Monthly</th>
      <th>Budget</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.description %></td>
        <td><%= income.amount %></td>
        <td><%= income.recurring %></td>
        <td><%= income.weekly %></td>
        <td><%= income.fortnightly %></td>
        <td><%= income.monthly %></td>
        <td><%= income.budget_id %></td>
        <td><%= income.account_id %></td>
        <td><%= link_to 'Show', income %></td>
        <td><%= link_to 'Edit', edit_income_path(income) %></td>
        <td><%= link_to 'Destroy', income, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

