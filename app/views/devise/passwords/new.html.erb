<div class="registration-container">
    <%= devise_error_messages! %>

    <div class="registration-box animated fadeInDown">
        <div class="registration-logo"></div>
        <div class="registration-body">
            <div class="registration-title"><strong>Forgot</strong> Password?</div>
            <div class="registration-subtitle">Please enter the email address you had registered with to receive password reset instructions. </div>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), class: "form-horizontal", html: { method: :post }) do |f| %>
            <h4>Your E-mail</h4>
            <div class="form-group">
                <div class="col-md-12">
                    <%= f.email_field :email, autofocus: true,placeholder:"email@domain.com",class:"form-control" %>
                </div>
            </div>
            <div>&nbsp;</div>
            <div class="form-group push-up-20">
                <div class="col-md-6">
                    <%= link_to "Log in", new_session_path(resource_name),class: "btn btn-link btn-block" %>
                </div>
                <div class="col-md-6">
                    <%= f.submit "Reset password",class: "btn btn-danger btn-block" %>
                </div>
            </div>
            <% end %>
        </div>
        <div class="registration-footer">
            <div class="pull-left">
                &copy; 2015 AppName
            </div>
            <div class="pull-right">
                <a href="#">About</a> |
                <a href="#">Privacy</a> |
                <a href="#">Contact Us</a>
            </div>
        </div>
    </div>

</div>
