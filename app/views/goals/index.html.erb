<h1>Listing goals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Icon</th>
      <th>Amount</th>
      <th>Target date</th>
      <th>Account</th>
      <th>Percentage towards goal</th>
      <th>Current balance towards goal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.name %></td>
        <td><%= goal.icon %></td>
        <td><%= goal.amount %></td>
        <td><%= goal.target_date %></td>
        <td><%= goal.account_id %></td>
        <td><%= goal.percentage_towards_goal %></td>
        <td><%= goal.current_balance_towards_goal %></td>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

