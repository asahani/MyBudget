<div class="content-frame">

  <div class="content-frame-right" style="background: #2D3945;color: #94ABBA;">
    <div style="border-bottom: 1px solid #555;">
      <div style="text-align:center;">
        <h3 style="color:white;"><%=@budget_year%></h3>
      </div>
      <div style="text-align:center;padding-bottom: 10px;">
        All categories and accounts included
      </div>
    </div>
    <div style="border-bottom: 1px solid #555;padding-top: 10px;">
      <div style="text-align:center;">
        <h6 style="color:#94abba;">TOTAL SPENDING</h6>
      </div>
      <div style="text-align:center;padding-bottom: 10px;">
        <h3 style="color:white;"><%=number_to_currency(121)%></h3>
        For this timeframe
      </div>
    </div>
    <div style="border-bottom: 1px solid #555;padding-top: 10px;">
      <div style="text-align:center;">
        <h6 style="color:#94abba;">AVERAGE SPENDING</h6>
      </div>
      <div style="text-align:center;padding-bottom: 10px;">
        <h3 style="color:white;"><%=number_to_currency(1212)%></h3>
        Per Month
      </div>
    </div>
    <div class="">
      <table class="" style="width:100%;">
        <thead>
          <th style="line-height: 20px;padding:5px;">Category</th>
          <th style="line-height: 20px;text-align:right;">Spend</th>
        </thead>

      </table>
    </div>
  </div>


  <div class="content-frame-body content-frame-body-left" style="padding-top: 10px!important;">
      <div class="">
        <div class="col-md-12">
            <%= content_tag :div," ",id: "summaryreport", data: {
              overallsummarymonths: report_months_data,
              overallsummaryincomes: overall_summary_report_incomes_data,
              overallsummaryexpenses: overall_summary_report_expenses_data,
              overallsummarysavings: overall_summary_report_savings_data,
              incomeexpensedifference: report_income_expense_difference_data,
              overallpiedata: overall_pie_data_for_summary}%>
        </div>
      </div>
      <div class="annual-report">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <th style="background: none!important;"><%=@budget_year%></th>
            <%@annual_report[:month_name].each do |month_name|%>
              <th><strong><%=month_name%></strong></th>
            <%end%>
            <th>Totals</th>
          </thead>

          <tbody>
            <tr>
              <td class="heading-column-cell report-cell">Income</td>
              <%@annual_report[:income].each do |income|%>
                <td class="number-cell report-cell"><%=number_to_currency(income) unless income.nil?%></td>
              <%end%>
            </tr>

            <tr>
              <td class="heading-column-cell report-cell">Expenses</td>
              <%@annual_report[:expenses].each do |expense|%>
                <td class="number-cell report-cell"><%=number_to_currency(expense) unless expense.nil?%></td>
              <%end%>
            </tr>

            <tr>
              <td class="heading-column-cell report-cell">Savings</td>
              <%@annual_report[:savings].each do |saving|%>
                <td class="number-cell report-cell"><%=number_to_currency(saving) unless saving.nil?%></td>
              <%end%>
            </tr>

            <tr>
              <td class="heading-column-cell report-cell">savings_expenses</td>
              <%@annual_report[:savings_expenses].each do |savings_expense|%>
                <td class="number-cell report-cell"><%=number_to_currency(savings_expense) unless savings_expense.nil?%></td>
              <%end%>
            </tr>

            <tr>
              <td class="heading-column-cell report-cell">total_expenses</td>
              <%@annual_report[:total_expenses].each do |total_expense|%>
                <td class="number-cell report-cell"><%=number_to_currency(total_expense) unless total_expense.nil?%></td>
              <%end%>
            </tr>

            <tr>
              <td class="heading-column-cell report-cell">overall_savings</td>
              <%@annual_report[:overall_savings].each do |overall_saving|%>
                <td class="number-cell report-cell"><%=number_to_currency(overall_saving) unless overall_saving.nil?%></td>
              <%end%>
            </tr>

            <tr>
              <td class="heading-column-cell report-cell">remaining</td>
              <%@annual_report[:remaining].each do |remaining|%>
                <td class="number-cell report-cell"><%=number_to_currency(remaining) unless remaining.nil?%></td>
              <%end%>
            </tr>

            <tr>
              <td class="heading-column-cell report-cell">misc_percentage</td>
              <%@annual_report[:misc_percentage].each do |misc_percentage|%>
                <td class="number-cell report-cell"><%=(misc_percentage.to_s + '%') unless misc_percentage.nil?%> </td>
              <%end%>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="">
        <div class="col-md-6">
          <%= content_tag :div," ",id: "monthlyexpensesreport", data: {overallsummarymonths: report_months_data,monthlyexpenses: report_expenses_data}%>
        </div>

        <div class="col-md-6">
          <%= content_tag :div," ",id: "monthlysavingsreport", data: {overallsummarymonths: report_months_data,monthlysavings: report_savings_data}%>
        </div>

      </div>
      <div class="">
        <div class="col-md-6">
          <%= content_tag :div," ",id: "overallexpensesreport", data: {overallsummarymonths: report_months_data,overallexpenses: overall_summary_report_expenses_data}%>
        </div>

        <div class="col-md-6">
          <%= content_tag :div," ",id: "overallsavingsreport", data: {overallsummarymonths: report_months_data,overallsavings: overall_summary_report_savings_data}%>
        </div>

      </div>
  </div>
</div>
