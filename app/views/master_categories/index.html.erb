<!-- START ALERTS -->
<%=render 'layouts/alerts'-%>
<!-- END ALERTS -->

<!-- START BREADCRUMB -->
<ul class="breadcrumb push-down-0">
  <li><%=link_to "Admin",admin_index_path -%></li>
  <li class="active">Master Categories</li>
</ul>
<!-- END BREADCRUMB -->

<div class="content-frame">

  <!-- START PAGE HEAD -->
  <div class="content-frame-top">
    <div class="page-title">
      <h2><span class="fa fa-bookmark-o"></span> Master Categories</h2>
    </div>
    <div class="pull-right">
      <%= link_to raw("<span class='fa fa-plus'></span> New"), new_master_category_path, class: "btn btn-success btn-rounded" %>
    </div>
  </div>
  <!-- END PAGE HEAD -->

  <%= render 'right_content_panel' %>

  <div class="content-frame-body content-frame-body-left" style="height: 846px;">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">List of Master Categories</h3>
        <ul class="panel-controls">
          <li><a href="#" class="panel-fullscreen"><span class="fa fa-expand"></span></a></li>
          <li><a href="#" class="panel-collapse"><span class="fa fa-angle-down"></span></a></li>
          <li><a href="#" class="panel-remove"><span class="fa fa-times"></span></a></li>
        </ul>
      </div>
      <div class="panel-body panel-body-table">
        <div class="table-responsive">
          <table class="table table-bordered table-striped table-actions table-hover">
              <thead>
                  <tr>
                      <th width="50">id</th>
                      <th>name</th>
                      <th width="100">display</th>
                      <th width="120">actions</th>
                  </tr>
              </thead>
              <tbody>
                <% @master_categories.each_with_index do |master_category,index| %>
                  <tr id="trow_<%=index+1-%>">
                    <td class="text-center"><%=index+1-%></td>
                    <td><%= master_category.name %></td>
                    <td><%= master_category.display %></td>
                    <td>
                      <%= link_to raw("<span class='fa fa-pencil'></span>"), edit_master_category_path(master_category), :class=>"btn btn-default btn-rounded btn-condensed btn-sm" %>
                      <!-- <%= link_to raw("<span class='fa fa-times'></span>"), master_category, class: "btn btn-danger btn-rounded btn-condensed btn-sm", method: :delete, data: { confirm: 'Are you sure?'}, onClick: "delete_row('trow_#{index+1}');"%> -->
                   </td>
                 </tr>
                <% end %>
              </tbody>
          </table>
      </div>

      </div>

    </div>

  </div>
</div>
